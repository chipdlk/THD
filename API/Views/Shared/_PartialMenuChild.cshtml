@model API.Areas.Admin.Models.Menus.Menus;
<li>
    <a href="#">@(Model.Title)</a>
    <ul>
        @for (int i = 0; i < Model.ListMenus.Count; i++)
        {
            @if (Model.ListMenus[i].ChildCount > 0)
            {
                @await Html.PartialAsync("_PartialMenuChild", Model.ListMenus[i]);
            }
            else
            {
                if (Model.ListMenus[i].Link != null)
                {
                    <li><a href="@(Model.ListMenus[i].Link)"><i class="@(Model.ListMenus[i].Icon)"></i>@(Model.ListMenus[i].Title)</a></li>
                }
                else if (Model.ListMenus[i].ArticleId != 0)
                {
                    <li><a href="/gioi-thieu.html"> <i class="@(Model.ListMenus[i].Icon)"></i>@(Model.ListMenus[i].Title)</a></li>
                }
                else
                {
                    <li><a href="#"><i class="@(Model.ListMenus[i].Icon)"></i>@(Model.ListMenus[i].Title)</a></li>
                }

            }
        }
    </ul>
</li>

