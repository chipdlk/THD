                        <div class="form-group">
                            <label asp-for="Item.PhauThuatThanhCong">Phẫu thuật thành công </label>
                            <input type="number" class="form-control" asp-for="Item.PhauThuatThanhCong" name="PhauThuatThanhCong">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Item.SEODescription">SEO Description</label>
                            <textarea asp-for="Item.SEODescription" name="SEODescription" class="form-control"></textarea>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Item.SEOKeyword">SEOKeyword</label>
