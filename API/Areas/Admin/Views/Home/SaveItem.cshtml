            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="Item.Map">Google Map</label>
                        <textarea asp-for="Item.Map" name="Map" class="form-control"></textarea>
                    </div>
                </div>


            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="Item.Footer">Footer</label>
                        <textarea asp-for="Item.Footer" name="Footer" class="form-control"></textarea>
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="Item.Contact">Liên Hệ</label>
                        <textarea asp-for="Item.Contact" name="Contact" class="form-control"></textarea>
                    </div>
                </div>
            </div>

            <input type="submit" class="btn btn-primary" name="SaveItem" value="Lưu" />
            <a class="btn btn-info" asp-controller="@ControllerName" asp-action="Index">Quay Lại</a>


        </form>
    </div>
</div>
@section Scripts{
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script src="~/lib/ckeditor/adapters/jquery.js"></script>
    <script>

        var roxyFileman = '/lib/fileman/index.html';
        $(function () {
            CKEDITOR.replace('Footer', {
                filebrowserBrowseUrl: roxyFileman,
                filebrowserImageBrowseUrl: roxyFileman + '?type=image',
                removeDialogTabs: 'link:upload;image:upload'
            });
        });

        $(function () {
            CKEDITOR.replace('Contact', {
                filebrowserBrowseUrl: roxyFileman,
                filebrowserImageBrowseUrl: roxyFileman + '?type=image',
                removeDialogTabs: 'link:upload;image:upload'
            });
        });
    </script>
    <script>
        function openCustomRoxy() {

            $('#roxyCustomPanel').modal('show');
        }
        function closeCustomRoxy() {
            $('#roxyCustomPanel').modal('hide');
        }
    </script>
}